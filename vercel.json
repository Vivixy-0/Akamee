{
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "eslint": {
          "ignoreDuringBuilds": true
        },
        "typescript": {
          "ignoreBuildErrors": true
        }
      }
    }
  ],
  "github": {
    "enabled": true,
    "silent": false
  },
  "env": {
    "NEXT_DISABLE_ESLINT": "1",
    "NEXT_DISABLE_TYPECHECK": "1",
    "SKIP_ESLINT": "true",
    "SKIP_TYPE_CHECK": "true"
  }
} 